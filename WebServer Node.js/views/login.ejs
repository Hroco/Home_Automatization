 <div id="maincontent" class="container">

<form action="/login" method="POST">
	<div class="cbi-map">
		<h2><a id="content" name="content">Authorization Required</a></h2>
		<div class="cbi-map-descr">Please enter your username and password.</div>
      <div class="cbi-map-descr">
        <% if (messages.error) { %>
          <%= messages.error %>
        <% }%></div>
		<fieldset class="cbi-section"><fieldset class="cbi-section-node">
			<div class="cbi-value">
				<label class="cbi-value-title">Email</label>
				<div class="cbi-value-field">
					<input class="cbi-input-user" type="text" name="email"/>
				</div>
			</div>
			<div class="cbi-value cbi-value-last">
				<label class="cbi-value-title">Password</label>
				<div class="cbi-value-field">
					<input class="cbi-input-password" type="password" name="password" />
				</div>
			</div>
		</fieldset></fieldset>
	</div>

	<div>
		<input type="submit" value="Login" class="cbi-button cbi-button-apply" />
    <a href="/register" class="cbi-button cbi-button-reset">Register</a>
</form>
</div>
